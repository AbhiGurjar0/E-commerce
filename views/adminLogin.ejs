<%- include('./partials/header') %>
    <% if(error.length>0){ %>
        <div class="absolute top-10 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-red-500 z-[99]">
            <span class="inline-block mt-1 mb-1 text-white">
                <%= error %>
            </span>
        </div>
        <% } %>

            <div class="bg-gray-100 min-h-[70vh] flex items-center justify-center">
                <div class="bg-white shadow-lg rounded-2xl p-8 w-96">
                    <h2 class="text-2xl font-bold mb-4 text-center">Admin Account</h2>
                    <div class="tabs flex justify-between mb-6">
                        <button id="loginTab"
                            class="w-1/2 py-2 font-semibold text-lg border-b-2 border-blue-500">Login</button>
                        <button id="registerTab"
                            class="w-1/2 py-2 font-semibold text-lg text-gray-500 border-green-500">Register</button>
                    </div>

                    <!-- Login Form -->
                    <form id="loginForm" class="space-y-4" action="/owners/login" method="post">
                        <input type="email" placeholder="Email" class="w-full px-4 py-2 border rounded-xl" required name="email">
                        <input type="password" placeholder="Password" class="w-full px-4 py-2 border rounded-xl"
                            required name="password">
                        <button type="submit"
                            class="w-full bg-blue-500 text-white py-2 rounded-xl font-semibold hover:bg-blue-600 transition">Login</button>
                    </form>

                    <!-- Register Form -->
                    <form id="registerForm" class="space-y-4 hidden" action="/owners/register" method="post">
                        <input type="text" placeholder="Full Name" class="w-full px-4 py-2 border rounded-xl" required name="fullname">
                        <input type="email" placeholder="Email" class="w-full px-4 py-2 border rounded-xl" required name="email">
                        <input type="password" placeholder="Password" class="w-full px-4 py-2 border rounded-xl"
                            required name="password">
                        
                        <button type="submit"
                            class="w-full bg-green-500 text-white py-2 rounded-xl font-semibold hover:bg-green-600 transition">Register</button>
                    </form>
                </div>
            </div>
            <script src="../javascripts/script.js"></script>
            <%- include('./partials/footer') %>