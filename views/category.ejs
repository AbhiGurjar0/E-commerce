    <div class="w-full min-h-screen flex gap-10">
        <div class="hidden md:block w-[25%] h-full">
            <div id="price-filter" class="w-full flex flex-col gap-5 p-2 pl-8">
                <h3 class="text-xl">Filter By Price</h3>
                <div id="price-slider" class="h-[4px] w-full  "></div>
                <div class="flex justify-between items-center">
                    <p>Price: ₹<span class="font-bold text-md" id="min-price">4840</span> — ₹<span
                            class="font-bold text-md" id="max-price">1171020</span></p>
                    <button class="font-medium bg-blue-100 px-5 py-2 rounded-full"
                        onclick="applyFilters()">Filter</button>
                </div>
            </div>
        </div>
        <div class="products w-full md:w-[72%] h-full flex flex-wrap gap-5 mt-2 ">
            <% products.forEach(product=> { %>
                <a href="/product/<%=product._id%>">
                    <div id="product"
                        class=" relative h-[40vh]  md:h-[50vh] w-[47%] md:w-[23vw] overflow-hidden group tracking-tighter">
                        <img class=" h-[80%] md:h-[86%] w-[100%]  object-center object-cover"
                            src="data:image/jpeg;base64,<%= product.image.toString('base64') %>"
                            alt="<%= product.name %>">

                        <div id="view-product"
                            class="bg-white h-[20%] md:h-[30%] w-full md:absolute md:-bottom-16 md:left-0 md:transition-all md:duration-300 md:ease-in-out md:group-hover:bottom-0">
                            <div>
                                <h2 class="pl-2 text-[.9rem] md:text-[20px] font-medium ">
                                    <%= product.name %>
                                </h2>

                            </div>
                            <div class="flex justify-between p-2 text-[.8rem]  ">
                                <div class="flex justify-start gap-1 md:gap-2">

                                    <p>
                                        &#8377;<%= Number(product.price - product.discount) %>
                                    </p>
                                    <p class="line-through opacity-50 text-[#B5B5B5]">&#8377; <%= product.price %>
                                    </p>
                                </div>
                                <p class="text-green-500">SAVE: &#8377; <%= product.discount %>
                                </p>
                            </div>
                            <div class="flex justify-between p-2 hidden md:block">
                                <a class="bg-blue-400 py-2 px-8 rounded-full border-none" href="">View Product</a>
                                <a class="bg-blue-400 py-2 px-8 rounded-full border-none"
                                    href="/add-to-cart/<%=product._id%>">Add
                                    to cart</a>
                            </div>
                        </div>
                    </div>
                </a>


                <% }); %>
        </div>
