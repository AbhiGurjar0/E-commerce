<%- include('./partials/header') %>
    <div class="min-h-screen w-full">
        <h2 class="text-xl font-bold mb-4">Search Results for "<%= query %>"</h2>
        <div class=" products w-full md:w-[100%] h-min-[60vh] flex flex-wrap gap-2 my-2 px-2 ">
            <% if (products.length> 0) { %>
                <% products.forEach(product=> { %>
                    <a href="/product/<%=product._id%>">
                        <div class="w-[17vw]">
                            <!-- Jewelry Card -->
                            <div class="bg-white shadow-lg rounded-xl overflow-hidden border">
                                <img src="data:image/jpeg;base64,<%= product.images[0].toString('base64') %>" alt="Jewelry"
                                    class="w-full h-60 object-cover object-center" />
                                <div class="p-4">
                                    <h2 class="font-bold text-lg">
                                        <%=product.name%>
                                    </h2>
                                    <p class="text-sm text-gray-500">By Padmawat Jewellers</p>
                                    <!-- <p class="text-sm text-gray-500">No Reviews Yet</p> -->
                                    <div class="flex justify-between items-center mt-3 ">
                                        <span class="text-purple-600 font-semibold text-md">(â‚¹)
                                            <%=Number(Number(product.price) - Number(product.discount))%>
                                        </span>
                                        <span class="text-purple-200  text-md line-through">
                                            <%=product.price%>
                                        </span>
                                        <span class="text-gray-500 text-sm">
                                            <%=product.gold%>
                                        </span>
                                        <span class="text-gray-500 text-sm">SAVE:<%=product.discount%></span>
                                    </div>
                                    <div class="flex justify-center items-center mt-4">
                                        <a class="w-full" href="/add-to-cart/<%=product._id%>">
                                            <button class="w-full uppercase text-white text-xl bg-black py-2 px-3 ">Add
                                                to cart</button>
                                        </a>

                                    </div>
                                </div>
                            </div>
                            <!-- Duplicate the above card for more items with different details -->
                        </div>
                        <a href="/product/<%=product._id%>">
                            <% }) %>
                                <% } else { %>
                                    <p>No products found matching "<%= query %>".</p>
                                    <% } %>
        </div>
    </div>
    <%- include('./partials/footer') %>