  <!-- GSAP Animation -->
  <!-- GSAP Animation -->
  <script>

    // Function to duplicate images and create seamless scroll
    function createInfiniteScroll(wrapper) {
      const images = Array.from(wrapper.children);

      // Duplicate images for seamless scrolling
      images.forEach((img) => {
        const clone = img.cloneNode(true);
        wrapper.appendChild(clone);
      });
      window.addEventListener("wheel", function (dets) {
        if (dets.deltaY > 0) {
          gsap.to(wrapper, {
            transform: "translateX(-200%)",
            duration: 3,
            // repeat: -1,
            ease: "none"
          });
        }
        else {
          gsap.to(wrapper, {
            transform: "translateX(0%)",
            duration: 3,
            // repeat: -1,
            ease: "none"
          });

        }
      })
      // GSAP Animation for infinite scroll

    }

    // Apply scrolling to each image wrapper
    document.querySelectorAll(".image-wrapper").forEach((wrapper) => {
      createInfiniteScroll(wrapper);
    });

  </script>


