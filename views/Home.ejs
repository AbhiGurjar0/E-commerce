  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"></script>
  <script>
    // Function to duplicate images and create seamless scroll
    function createInfiniteScroll(wrapper) {
      const images = Array.from(wrapper.children);

      // Duplicate images for seamless scrolling
      images.forEach((img) => {
        const clone = img.cloneNode(true);
        wrapper.appendChild(clone);
      });

      window.addEventListener("wheel", function (dets) {
        if (dets.deltaY > 0) {
          gsap.to(wrapper, {
            transform: "translateX(-200%)",
            duration: 3,
            ease: "none"
          });
        } else {
          gsap.to(wrapper, {
            transform: "translateX(0%)",
            duration: 3,
            ease: "none"
          });
        }
      });
    }

    // Apply scrolling to each image wrapper
    document.querySelectorAll(".image-wrapper").forEach((wrapper) => {
      createInfiniteScroll(wrapper);
    });
    // Toggle mobile menu
    document.getElementById('menu-toggle').addEventListener('click', () => {
      document.getElementById('mobile-menu').classList.toggle('hidden');
    });

    // Toggle mobile submenu
    document.getElementById('submenu-toggle').addEventListener('click', () => {
      document.getElementById('submenu').classList.toggle('hidden');
    });
    //remove controls
    document.querySelectorAll("video").forEach((video) => {
      video.removeAttribute("controls");
    });
  </script>

