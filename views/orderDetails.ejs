<%- include("./partials/header") %>
    <div class="bg-gray-100 py-10 px-4 flex gap-4">
        <div class="max-w-4xl mx-auto bg-white p-4 rounded-lg shadow-lg  w-[45vw]">

            <div class="flex justify-between items-start">
                <div>
                    <h1 class="text-xl font-semibold">
                        <%=order.productId.name%>
                    </h1>
                    <p class="text-gray-500">
                        <%=order.productId.color%>
                    </p>
                    <p class="text-gray-500">
                        Seller: RetailNet
                    </p>
                    <p class="text-2xl font-bold mt-2">
                        ₹<%=order.productId.price%>

                    </p>
                </div>
                <img alt="Laptop image" class="w-24 h-24 object-cover"
                    src="data:image/jpeg;base64,<%= order.productId.images[0].toString('base64') %>" />
            </div>
            <div class="mt-4 relative">
                <div class="flex items-center">
                    <i class="fas fa-check-circle text-green-500">
                    </i>
                    <p class="ml-2">
                        Order Confirmed, <%=order.orderDate%>
                    </p>
                </div>
                <div class="w-1 h-[5vh] bg-gray-300 ml-1 rounded-lg"></div>
                <div class="w-1 h-[5vh] bg-green-500 absolute ml-1 top-[2vw] left-[2px] rounded-lg hidden"></div>
                <div class="flex items-center mt-2">
                    <i class="fas fa-check-circle text-gray-500">
                    </i>

                    <p class="ml-2">
                        Delivered, Oct 03, 2022
                    </p>
                </div>
                <a class="text-blue-500 mt-2 block" href="#">
                    See All Updates
                </a>
            </div>
            <div class="mt-4 flex items-center">
                <div class="flex space-x-1">
                    <i class="fas fa-star text-green-500 text-2xl">
                    </i>
                    <i class="fas fa-star text-green-500 text-2xl">
                    </i>
                    <i class="fas fa-star text-green-500 text-2xl">
                    </i>
                    <i class="fas fa-star text-green-500 text-2xl">
                    </i>
                    <i class="fas fa-star text-green-500 text-2xl">
                    </i>
                </div>
                <button class="ml-4 text-blue-500 flex items-center">
                    <i class="fas fa-camera mr-1">
                    </i>
                    Add Review
                </button>
            </div>
            <button class="mt-4 text-blue-500 flex items-center">
                <i class="fas fa-comments mr-1">
                </i>
                Chat with us
            </button>

        </div>
        <!-- // Order Details -->

        <div class="bg-white shadow-lg rounded-lg p-6 w-full max-w-[26vw]">
            <div class="relative">
                <div class="absolute left-[2vw] top-0 bottom-0 w-1 bg-green-500 "></div>
                <div class="pl-6">
                    <div class="relative mb-6">
                        <div class="absolute left-0 top-0 w-3 h-3 bg-green-500 rounded-full"></div>
                        <div class="ml-6">
                            <h2 class="font-semibold text-lg">Order Confirmed <span class="text-gray-500">Fri, 23rd Sep
                                    '22</span></h2>
                            <p class="text-gray-600">Your Order has been placed.</p>
                            <p class="text-gray-400">Fri, 23rd Sep '22 - 8:36pm</p>
                            
                        </div>
                    </div>
                    <div class="relative mb-6">
                        <div class="absolute left-0 top-0 w-3 h-3 bg-green-500 rounded-full"></div>
                        <div class="ml-6">
                            <h2 class="font-semibold text-lg">Shipped <span class="text-gray-500">Sat, 24th Sep
                                    '22</span></h2>
                           
                            <p class="text-gray-600">Your item has been shipped.</p>
                            <p class="text-gray-400">Sat, 24th Sep '22 - 2:47pm</p>
                           
                        </div>
                    </div>
                    <div class="relative mb-6">
                        <div class="absolute left-0 top-0 w-3 h-3 bg-green-500 rounded-full"></div>
                        <div class="ml-6">
                            <h2 class="font-semibold text-lg">Out For Delivery <span class="text-gray-500">Mon, 3rd Oct
                                    '22</span></h2>
                           
                        </div>
                    </div>
                    <div class="relative">
                        <div class="absolute left-0 top-0 w-3 h-3 bg-green-500 rounded-full"></div>
                        <div class="ml-6">
                            <h2 class="font-semibold text-lg">Delivered <span class="text-gray-500">Mon, 3rd Oct
                                    '22</span></h2>
                            <p class="text-gray-600">Your item has been delivered</p>
                            <p class="text-gray-400">Mon, 3rd Oct '22 - 2:28pm</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="max-w-4xl mx-auto bg-white p-4 rounded-lg shadow-xl  flex flex-col gap-4 w-[30vw]">

            <h2 class="text-lg font-bold p-4">
                Order Details
            </h2>


            <div class="mt-2  p-4 bg-white">
                <h2 class="font-semibold">
                    Shipping details
                </h2>
                <p>
                    <%=order.shippingAddress.fullname%>
                </p>
                <p>
                    <%=order.shippingAddress.fullAddress %>
                </p>
                <p>
                    <%=order.shippingAddress.city%>
                </p>
                <p>
                    <%=order.shippingAddress.state%>-<%=order.shippingAddress.zipCode%>
                </p>
                <p>
                    <%=order.shippingAddress.phoneNumber%>
                </p>
            </div>
            <div class="mt-2  bg-white p-4">
                <h2 class="font-semibold">
                    Price Details
                </h2>
                <div class="flex justify-between">
                    <p>
                        List price
                    </p>
                    <p>
                        ₹<%=order.productId.price%>
                    </p>
                </div>
                <div class="flex justify-between">
                    <p>
                        Selling price
                    </p>
                    <p>
                        ₹<%= (order.productId.price -order.productId.discount)%>
                    </p>
                </div>

                <div class="flex justify-between">
                    <p>
                        Delivery Charge
                    </p>
                    <p class="line-through">
                        ₹40
                    </p>
                    <p class="text-green-500">
                        Free
                    </p>
                </div>
                <div class="flex justify-between font-bold mt-2">
                    <p>
                        Total Amount
                    </p>
                    <p>
                        ₹<%= (order.productId.price -order.productId.discount)%>

                    </p>
                </div>
                <div class="mt-2">
                    <p>
                        Cash On Delivery: ₹<%= (order.productId.price -order.productId.discount)%>
                    </p>
                </div>
            </div>
        </div>
    </div>
    <%- include("./partials/footer") %>