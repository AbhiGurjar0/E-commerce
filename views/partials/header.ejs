                    </a>
                </div>
            </div>

            <!-- Categories -->
            <div
                class="flex flex-wrap justify-center space-x-3 sm:space-x-6 mt-2 bg-gray-100 py-2 shadow-inner overflow-auto ">
                <a href="/product-category/all"
                    class="text-gray-700 font-medium hover:text-blue-500 transition duration-200 capitalize">
                    All
                </a>
                <% const uniqueCategories=[...new Set(categories)]; %>

                    <% uniqueCategories.forEach(function(category) { %>
                        <a href="/product-category/<%= category %>"
                            class="text-gray-700 font-medium hover:text-blue-500 transition duration-200 capitalize">
                            <%= category %>
                        </a>
                        <% }) %>


            </div>
        </nav>
