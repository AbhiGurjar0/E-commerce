<%- include('./partials/header') %>

    <% if (error.length> 0) { %>
        <div
            class="fixed top-4 left-1/2 transform -translate-x-1/2 p-3 rounded-md bg-red-500 z-50 max-w-xs sm:max-w-sm md:max-w-md lg:max-w-lg">
            <span class="inline-block text-white text-center">
                <%= error %>
            </span>
        </div>
        <% } %>

            <div class="bg-gray-100 min-h-[60vh] flex items-center justify-center p-4">
                <div class="bg-white shadow-lg rounded-2xl p-6 w-full max-w-md sm:max-w-lg">
                    <h2 class="text-2xl font-bold mb-6 text-center">Welcome to <br> Padmawat Jewellers</h2>


                    <button id="loginTab"
                        class="w-full py-3 my-2 font-semibold text-lg border-b-2 border-blue-500 focus:outline-none">Update
                        Password</button>


                    <!-- Login Form -->
                    <form id="loginForm" class="space-y-4" action="/edit" method="post">
                        <input type="email" placeholder="Email" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$"
                            class="w-full px-4 py-2 border rounded-xl focus:ring focus:ring-blue-300" required
                            name="email">
                        <input type="password" minlength="8" maxlength="15" placeholder="New Password"
                            class="w-full px-4 py-2 border rounded-xl focus:ring focus:ring-blue-300" required
                            name="password">
                        <button type="submit"
                            class="w-full bg-blue-500 text-white py-2 rounded-xl font-semibold hover:bg-blue-600 transition">Submit</button>
                    </form>

                    <!-- Register Form -->

                </div>
            </div>

            <script src="../javascripts/script.js"></script>
            <%- include('./partials/footer') %>