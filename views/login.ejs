<%- include('./partials/header') %>

<% if (error.length > 0) { %>
    <div class="fixed top-4 left-1/2 transform -translate-x-1/2 p-3 rounded-md bg-red-500 z-50 max-w-xs sm:max-w-sm md:max-w-md lg:max-w-lg">
        <span class="inline-block text-white text-center">
            <%= error %>
        </span>
    </div>
<% } %>

<div class="bg-gray-100 min-h-[60vh] flex items-center justify-center p-4">
    <div class="bg-white shadow-lg rounded-2xl p-6 w-full max-w-md sm:max-w-lg">
        <h2 class="text-2xl font-bold mb-6 text-center">Welcome to <br> Padmawat Jewellers</h2>

        <div class="tabs flex justify-between mb-6">
            <button id="loginTab" class="w-1/2 py-2 font-semibold text-lg border-b-2 border-blue-500 focus:outline-none">Login</button>
            <button id="registerTab" class="w-1/2 py-2 font-semibold text-lg text-gray-500 focus:outline-none">Register</button>
        </div>

        <!-- Login Form -->
        <form id="loginForm" class="space-y-4" action="/users/login" method="post">
            <input type="email" placeholder="Email" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" class="w-full px-4 py-2 border rounded-xl focus:ring focus:ring-blue-300" required name="email">
            <input type="password" minlength="8" maxlength="15" placeholder="Password" class="w-full px-4 py-2 border rounded-xl focus:ring focus:ring-blue-300" required name="password">
            <button type="submit" class="w-full bg-blue-500 text-white py-2 rounded-xl font-semibold hover:bg-blue-600 transition">Login</button>
        </form>

        <!-- Register Form -->
        <form id="registerForm" class="space-y-4 hidden" action="/users/register" method="post">
            <input type="text" minlength="4" maxlength="10" pattern="[A-Za-z0-9]+" placeholder="Full Name" class="w-full px-4 py-2 border rounded-xl focus:ring focus:ring-green-300" required name="fullname">
            <input type="email" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" placeholder="Email" class="w-full px-4 py-2 border rounded-xl focus:ring focus:ring-green-300" required name="email">
            <input type="password" minlength="8" maxlength="15" placeholder="Password" class="w-full px-4 py-2 border rounded-xl focus:ring focus:ring-green-300" required name="password">
            <input type="password" placeholder="Confirm Password" class="w-full px-4 py-2 border rounded-xl focus:ring focus:ring-green-300" required name="confirm_password">
            <button type="submit" class="w-full bg-green-500 text-white py-2 rounded-xl font-semibold hover:bg-green-600 transition">Register</button>
        </form>
    </div>
</div>

<script src="../javascripts/script.js"></script>
<%- include('./partials/footer') %>
