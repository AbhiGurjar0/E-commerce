<%- include('./partials/header') %>

    <div class="bg-gray-100 min-h-screen flex">
        <aside class="bg-white w-64 p-4 shadow-xl">
            <div class="flex flex-col items-center mb-6">
                <div
                    class="w-20 h-20 bg-purple-500 text-white rounded-full flex items-center justify-center text-2xl font-bold">
                    AG</div>
                <h2 class="text-lg font-bold mt-2">
                    <%=user.fullname%>
                </h2>
            </div>
            <nav class="space-y-4">
                <button class="flex items-center px-4 py-2 w-[80%]  text-black hover:bg-gray-200 rounded-lg"
                    onclick="showSection(this,'myProfile')">üè† My Profile</button>
                <button class="flex items-center px-4 py-2  w-[80%] hover:bg-gray-200 rounded-lg"
                    onclick="showSection(this,'allAddress')">üìç
                    All Addresses</button>
                <button class="flex items-center px-4 py-2  w-[80%] hover:bg-gray-200 rounded-lg"
                    onclick="showSection(this,'editProfile')">üñäÔ∏è
                    Edit Profile</button>
                <button class="flex items-center px-4 py-2  w-[80%] hover:bg-gray-200 rounded-lg"
                    onclick="showSection(this,'myOrders')">üì¶
                    My Orders</button>
                <button class="flex items-center px-4 py-2  w-[80%] hover:bg-gray-200 rounded-lg"
                    onclick="showSection(this,'myTransactions')">üí≥
                    My Transactions</button>
                <a href="/users/logout" class="text-center "><button
                        class=" mt-4 flex text-center justify-center items-center px-4 py-2  w-[80%] bg-red-500 rounded-lg">
                        Logout ‚èª</button></a>

            </nav>
        </aside>

        <!-- Main Content -->
        <main class="flex-1 p-8">
            <div id="myProfile" class="content">
                <h1 class="text-2xl font-bold mb-4">Personal Information</h1>
                <div class="bg-white shadow-lg rounded-xl p-6 grid grid-cols-2 gap-4">
                    <p><strong>FullName:</strong>
                        <%=user.fullname%>
                    </p>
                    <p><strong>Phone No:</strong>
                        <% let contactNumber=Number(user.contact) || "No Phone Number Added" ; %>
                            <%= contactNumber %>

                    </p>
                    <p><strong>Email:</strong>
                        <%=user.email%>
                    </p>

                    <!-- <p><strong>Date of Birth:</strong> Not Provided</p> -->
                </div>
            </div>
            <div id="allAddress" class="content hidden">
                <% if(addresses.length>0){%>
                       <a href="/updateAddress"> üñåÔ∏è Edit Address </a>
                        <div class="border border-gray-300 p-6 rounded-md shadow-md">
                            <h2 class="text-lg font-bold mb-4">Address Information</h2>
                            <div class="bg-gray-100 p-4 rounded-md">
                                <p><strong>Full Name :-</strong>
                                    <%=addresses[0].fullName%>
                                </p>
                                <p><strong>Phone Number :-</strong>
                                    <%=addresses[0].phoneNumber%>
                                </p>
                                <p><strong>Address :-</strong>
                                    <%=addresses[0].fullAddress%>
                                </p>

                                <div class="flex justify-between mt-4">
                                    <p><strong>City :-</strong>
                                        <%=addresses[0].city%>
                                    </p>
                                    <p><strong>State :-</strong>
                                        <%=addresses[0].state%>
                                    </p>
                                    <p><strong>Country :-</strong>
                                        <%=addresses[0].country%>
                                    </p>
                                    <p><strong>Pin Code :-</strong>
                                        <%=addresses[0].zipCode%>
                                    </p>
                                </div>
                                <div class="mt-4">
                                    <p><strong>Address Type :-</strong>
                                        <%=addresses[0].addressType%>
                                    </p>
                                    <p><strong>Default Address :-</strong>
                                        <%=addresses[0].isDefault%>
                                    </p>
                                </div>
                            </div>
                        </div>
                            <%}else{%>
                                <a href="/addAddress" class="hover:text-blue-500">+ Add address üè†</a>
                                <% }%>
            </div>
            <div id="editProfile" class="content hidden">

                <h1 class="text-2xl font-bold mb-4">Personal Information</h1>
                <!-- <div class=""> -->
                <form class="bg-white shadow-lg rounded-xl p-6 flex flex-col gap-4 items-center"
                    action="/edit/<%=user._id%>" method="post">
                    <input class="px-5 py-2 border-2 outline-none rounded-lg" placeholder="fullname" type="text"
                        value="<%=user.fullname%>" name="fullname">
                    <input class="px-5 py-2 border-2 outline-none rounded-lg" placeholder="Phone Number" type="number"
                        value="<%=user.contact%>" name="contact">
                    <input class="px-5 py-2 w-[5vw] text-center border-2 outline-none rounded-lg" value="Save"
                        type="submit">
                </form>

                <!-- <p><strong>Date of Birth:</strong> Not Provided</p> -->
                <!-- </div> -->

            </div>
            <div id="myOrders" class="content hidden">
                <section class="p-6 bg-gray-100">
                    <h2 class="text-2xl font-bold mb-4">My Orders</h2>
                    <div class="bg-white shadow rounded-lg p-4 space-y-4">
                        <!-- Orders List -->
                        <ul class="divide-y divide-gray-300">
                            <!-- Sample Order Item -->

                            <% orders.slice().reverse().forEach(function(order){ %>
                               <% if(order.productId) { // Check if productId exists
                                let foundProduct = products.find(product => product._id.toString() ===
                                order.productId.toString());

                                if(foundProduct && foundProduct.name && foundProduct.price) {
                              %>
                                <a href="/product/<%=order.productId%>">
                                    <li class="py-4">
                                        <div class="flex justify-between items-center">
                                            <div>
                                                <p class="font-medium ">ProductName :
                                                    <span class="font-semibold text-lg text-black">
                                                        <% if(order.productId) { // Check if productId exists let
                                                            foundProduct=products.find(product=> product._id.toString()
                                                            === order.productId.toString());

                                                            if(foundProduct) {
                                                            %> <%= foundProduct.name %>
                                                                <% } else { %>
                                                                    <span class="text-red-500">name not available</span>
                                                                    <% } } else { %>
                                                                        <span class="text-red-500">Product ID
                                                                            missing</span>
                                                                        <% } %>
                                                    </span>
                                                </p>

                                                <p class="font-medium">Order ID:
                                                    <%= order._id %>
                                                </p>
                                                <p class="text-sm text-gray-500">Date:
                                                    <%= new Date(order.createdAt).toLocaleDateString() %>
                                                </p>
                                                <p class="text-sm">Price: ‚Çπ
                                                    <% if(order.productId) { // Check if productId exists let
                                                        foundProduct=products.find(product=> product._id.toString() ===
                                                        order.productId.toString());

                                                        if(foundProduct && foundProduct.price) {
                                                        %>
                                                        <%= foundProduct.price - foundProduct.discount %>
                                                            <% } else { %>
                                                                <span class="text-red-500">Price not available</span>
                                                                <% } } else { %>
                                                                    <span class="text-red-500">Product ID missing</span>
                                                                    <% } %>
                                                </p>
                                            </div>
                                            <div>
                                                <span class="text-sm px-2 py-1 bg-green-100 text-green-600 rounded">
                                                    <% if(order.productId) { // Check if productId exists let
                                                        foundProduct=products.find(product=> product._id.toString() ===
                                                        order.productId.toString());

                                                        if(foundProduct) {
                                                        %> <%=order.status %>
                                                            <% } else { %>

                                                                <span
                                                                    class=" rounded text-red-500 text-md px-2 py-1">Deletd</span>
                                                                <% }%>
                                                                    <%}%>
                                                </span>
                                            </div>
                                        </div>
                                    </li>
                                </a>
                                <% }%>
                                    <% } else { %>
                                        <span class="text-red-500">Product ID missing</span>
                                        <% } %>
                                            <% }) %>


                        </ul>


                        <!-- View More Button -->
                        <div class="text-center mt-4">
                            <button class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600">View All
                                Orders</button>
                        </div>
                    </div>
                </section>
            </div>
            <div id="myTransactions" class="content hidden">
                <section class="p-6 bg-white rounded-lg shadow-md">
                    <h2 class="text-xl font-semibold">My Transactions</h2>
                    <ul class="mt-4">
                        <% transactions.slice().reverse().forEach(function(transaction) { %>
                            <li class="py-4 border-b">
                                <div class="flex justify-between items-center">
                                    <div>
                                        <p class="font-medium">Amount: ‚Çπ
                                            <%= transaction.amount %>
                                        </p>
                                        <p class="text-sm text-gray-500">Method:
                                            <%= transaction.paymentMethod %>
                                        </p>
                                        <p class="text-sm">Date:
                                            <%= new Date(transaction.createdAt).toLocaleDateString() %>
                                        </p>
                                    </div>
                                    <div>
                                        <% if (transaction.status==="Completed" ) { %>
                                            <span
                                                class="text-sm px-2 py-1 bg-green-100 text-green-600 rounded">Completed</span>
                                            <% } else { %>
                                                <span
                                                    class="text-sm px-2 py-1 bg-red-100 text-red-600 rounded">Failed</span>
                                                <% } %>
                                    </div>
                                </div>
                            </li>
                            <% }) %>
                    </ul>

                </section>


            </div>
        </main>
    </div>
    <script>
        let activeButton = null; // Currently active button ko track karega

        function showSection(button, sectionId) {
            // Hide all sections
            document.querySelectorAll('.content').forEach(el => el.classList.add('hidden'));
            document.getElementById(sectionId).classList.remove('hidden');

            // Purane active button ka style hatao
            if (activeButton) {
                activeButton.classList.remove('bg-purple-500', 'text-white');
                activeButton.classList.add('hover:bg-gray-200');
            }

            // Naya active button set karo
            button.classList.add('bg-purple-500', 'text-white');
            button.classList.remove('hover:bg-gray-200');
            activeButton = button; // Update current active button
        }
    </script>
    <%- include('./partials/footer') %>